{
  "name": "eventify-backend",
  "version": "2.0.0",
  "description": "Sistema de gesti√≥n de eventos con Node.js, Express y MongoDB",
  "main": "app.js",
  "type": "module",
  "scripts": {
  "start": "nodemon app.js",
  "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
  "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
  "test:coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage"
}
,
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "coveragePathIgnorePatterns": ["/node_modules/"],
    "testMatch": ["**/tests/**/*.test.js"],
    "transform": {}
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/micakn/eventify-backend.git"
  },
  "keywords": ["eventos", "backend", "nodejs", "express", "mongodb"],
  "author": "Micaela Knass y Gerardo",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "method-override": "^3.0.0",
    "mongoose": "^8.19.2",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.5",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  }
}